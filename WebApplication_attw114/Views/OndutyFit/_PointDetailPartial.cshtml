@model WebApplication_attw114.Models.PointDetailViewModel

<h5>Thông Tin Điểm Tuần Tra</h5>
<div class="table-responsive mb-4">
    <table class="table table-bordered">
        <tr>
            <th>Tên Điểm</th>
            <td>@Model.NamePoint</td>
        </tr>
        <tr>
            <th>Trạng Thái</th>
            <td>
                @if (Model.StatusSign?.ToLower() == "da_ky")
                {
                    <span class="badge bg-success">Đã Ký</span>
                }
                else
                {
                    <span class="badge bg-danger">Chưa Ký</span>
                }
            </td>
        </tr>
        <tr>
            <th>Thời Gian Ký</th>
            <td>@(Model.SignTime)</td>
        </tr>
    </table>
</div>

<h5>Tiêu Chuẩn Kiểm Tra</h5>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tiêu Chuẩn</th>
                <th>Đánh Giá</th>
                <th>Ghi Chú</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ListPointDetail != null && Model.ListPointDetail.Any())
            {
                int index = 1;
                foreach (var item in Model.ListPointDetail)
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.RuleName</td>
                        <td>
                            @if (item.IsOk)
                            {
                                <span class="text-success">Đạt</span>
                            }
                            else
                            {
                                <span class="text-danger">Không Đạt</span>
                            }
                        </td>
                        <td>@item.Memo</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Không có dữ liệu kiểm tra</td>
                </tr>
            }
        </tbody>
    </table>
</div>
